[global]
# Configuration globale de l'application

# Mode développement - à désactiver en production
developmentMode = true

# Affichage des messages d'erreur détaillés
showErrorDetails = true

[server]
# Port par défaut (changez si nécessaire)
port = 8501

# Rechargement automatique des fichiers
runOnSave = true

[theme]
# Thème de l'interface moderne et élégant
base = "light"
primaryColor = "slateBlue"
backgroundColor = "mintCream"
secondaryBackgroundColor = "darkSeaGreen"
textColor = "#262730"

# Configuration sidebar
[theme.sidebar]
backgroundColor = "aliceBlue"
secondaryBackgroundColor = "skyBlue"

[browser]
# Ouvrir automatiquement le navigateur
gatherUsageStats = false