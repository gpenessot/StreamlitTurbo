[global]
# Configuration globale de l'application

[server]
# Rechargement automatique des fichiers
runOnSave = true

# Taille maximale des fichiers uploades (en MB)
maxUploadSize = 200

# Protection CSRF
enableXsrfProtection = true

[theme]
# Theme de l'interface moderne et elegant
base = "{{ streamlit_theme }}"
primaryColor = "slateBlue"
backgroundColor = "mintCream"
secondaryBackgroundColor = "darkSeaGreen"
textColor = "#262730"

[browser]
# Ne pas collecter les statistiques d'usage
gatherUsageStats = false