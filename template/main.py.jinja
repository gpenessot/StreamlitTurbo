import streamlit as st

# Configuration de la page
st.set_page_config(
    page_title="{{ project_name }}",
    page_icon=":material/dashboard:",
    layout="wide",
    initial_sidebar_state="collapsed"
)

# Definition des pages avec navigation top
pages = [
    st.Page(
        "src/{{ project_slug | replace('-', '_') }}/pages/1_home.py",
        title="Accueil",
        icon=":material/home:",
        default=True
    ),
    st.Page(
        "src/{{ project_slug | replace('-', '_') }}/pages/2_dashboard.py",
        title="Dashboard",
        icon=":material/insert_chart:"
    ),
    st.Page(
        "src/{{ project_slug | replace('-', '_') }}/pages/3_settings.py",
        title="Parametres",
        icon=":material/settings:"
    ),
]

# Navigation en position top
page = st.navigation(pages, position="top")

# Execution de la page
page.run()